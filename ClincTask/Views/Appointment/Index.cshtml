@model IEnumerable<ClincTask.Models.Appointment>

<div class="container mt-5">
    <h2 class="mb-4">Appointment Cards</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Patient Name:</strong> @item.PatientName</h5>
                        <h5 class="card-title"><strong>Doctor Name:</strong> @item.Doctor?.Name</h5>
                        <p class="card-text"><strong>Specialization:</strong> @item.Doctor?.Specialization</p>
                        <p class="card-text"><strong>Date:</strong> @item.Date.ToString("yyyy-MM-dd")</p>
                        <p class="card-text"><strong>Time:</strong> @item.Time.ToString(@"hh\:mm")</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5" />

    <h2 class="mb-4">All Appointments Table</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Doctor Name</th>
                <th>Appointment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.PatientName</td>
                    <td>@appointment.Doctor?.Name</td>
                    <td>@appointment.Date.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

