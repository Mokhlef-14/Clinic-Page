@model IEnumerable<ClincTask.Models.Appointment>

<div class="container mt-5 animate__animated animate__fadeIn">
    <h2 class="mb-4 text-primary text-center fw-bold">All Appointments</h2>

    <div class="table-responsive animate__animated animate__fadeInUp">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Patient Name</th>
                    <th>Doctor Name</th>
                    <th>Appointment Date</th>
                    <th>Appointment Time</th>
                    <th>Specialization</th>
                    <th>Actions</th> <!-- Added Actions Column -->
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.PatientName</td>
                        <td>@appointment.Doctor?.Name</td>
                        <td>@appointment.Date.ToString("yyyy-MM-dd")</td>
                        <td>@appointment.Time.ToString(@"hh\:mm")</td>
                        <td>@appointment.Doctor?.Specialization</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


