@model IEnumerable<Doctor>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/images/@item.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Specialization</p>
                        <a href="#" class="btn btn-primary">Book An Appointment</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
